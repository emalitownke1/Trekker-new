modules = ["nodejs-20", "web"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Build and Start"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "NODE_ENV=production BASE_PATH=/default/server1/rest-service/v1.0 yarn tsx server/index.ts"
waitForPort = 5000

[[workflows.workflow]]
name = "Build and Start"
author = 40116771
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "yarn build"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "NODE_ENV=production BASE_PATH=/default/server1/rest-service/v1.0 yarn tsx server/index.ts"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
build = ["npm", "run", "build"]
run = ["npm", "run", "start"]
